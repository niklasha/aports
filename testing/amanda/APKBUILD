pkgname="amanda"
pkgver="3.5.1"
pkgrel=0
pkgdesc="Amanda, The Advanced Maryland Automatic Network Disk Archiver"
url="http://www.amanda.org/"
arch="all"
license="BSD"
depends="bash gettext perl glib"
makedepends="perl-dev pkgconfig glib-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz
	10-patch1.patch
	20-patch2.patch"
patch_args="-p2"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-ndmp \
		--without-amperldir
	make
}

check() {
#	make check
	:
}

package() {
	make DESTDIR="$pkgdir" install
}

